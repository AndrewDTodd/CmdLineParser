    },
    {
      "name": "x64-Release",
      "displayName": "x64 Release",
      "inherits": "x64-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x86-Debug",
      "displayName": "x86 Debug",
      "inherits": "linux-x64-base",
      "architecture": {
        "value": "x86",
